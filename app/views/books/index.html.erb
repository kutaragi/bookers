<div id="index">
	<h1>Books</h1>
	<table>
		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
			</tr>
		</thead>
		<% @books.each do |book|%>
		<tbody>
			<tr>
				<td><%= book.title %></td>
				<td><%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id), class: "link" %></td>
				<td><%= link_to "Edit", edit_book_path(book.id), class: "link" %></td>
				<td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" , class: "link" %></td>
			</tr>
		</tbody>
		<% end %>
	</table>

	<h2>New Book</h2>
	<%= form_for(:book) do |f| %>
		<h3>Title</h3>
		<%= f.text_field :title%>
		<h3>Body</h3>
		<%= f.text_area :body %>
		<%= f.submit "Create Book", class: "button" %>
	<% end %>
</div>